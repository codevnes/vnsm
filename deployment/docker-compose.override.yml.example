# Example override file for local development
services:
  db:
    ports:
      - "3306:3306"  # Expose MySQL port to host
    volumes:
      - ./mysql-init:/docker-entrypoint-initdb.d  # Mount initialization scripts
      - ./local-db-data:/var/lib/mysql  # Use local folder instead of volume for easier access

  adminer:
    ports:
      - "8080:8080"  # Expose Adminer directly for local development
    environment:
      ADMINER_DEFAULT_SERVER: db
      ADMINER_DESIGN: pepa-linha-dark
    labels:
      - "traefik.enable=false"  # Disable Traefik routing for local access

  # For local development, you might want to disable SSL
  traefik:
    command:
      - "--api.insecure=true"
      - "--providers.docker=true"
      - "--providers.docker.exposedbydefault=false"
      - "--entrypoints.web.address=:80"
    ports:
      - "8081:8080"  # Expose Traefik dashboard on a different port
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock:ro
    labels:
      - "traefik.enable=false" 